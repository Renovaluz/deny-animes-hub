<!DOCTYPE html>
<html lang="pt-BR" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.titulo || 'DenyAnimeHub' %> | O seu universo Otaku</title>

    <!-- Fontes e Ícones -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    
    <!-- CSS e Favicon -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/1.ico" type="image/ico">
</head>
<body class="page-<%= locals.page_name || 'default' %>">

    <!-- ================================================================================================== -->
    <!--      NAVBAR - HTML INTEGRADO                                                                       -->
    <!-- ================================================================================================== -->
    <header class="site-header">
        <div class="container">
            <div class="site-header__logo">
                <a href="/">
                    <img src="/images/1.ico" alt="Logo DenyAnimeHub">
                    <span>DenyAnimeHub</span>
                </a>
            </div>

            <!-- Botão do Menu Hambúrguer (só aparece em mobile) -->
            <button class="hamburger-menu" id="hamburger-menu" aria-label="Abrir menu" aria-expanded="false">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Navegação Principal -->
            <nav class="site-header__nav" id="main-nav">
                <ul>
                    <li><a href="/" class="<%= locals.page_name === 'index' ? 'active' : '' %>">Início</a></li>
                    <li><a href="/animes" class="<%= ['todos-animes', 'anime-detail'].includes(locals.page_name) ? 'active' : '' %>">Animes</a></li>
                    <li><a href="/noticias" class="<%= ['noticias', 'detalhe-post'].includes(locals.page_name) ? 'active' : '' %>">Notícias</a></li>
                    
                    <% if (userIsLoggedIn) { %>
                        <li><a href="/perfil" class="<%= ['perfil', 'editar-perfil'].includes(locals.page_name) ? 'active' : '' %>">Perfil</a></li>
                        <li><a href="/auth/logout" class="btn btn--small btn--primary">Sair</a></li>
                    <% } else { %>
                        <li><a href="/login" class="btn btn--small btn--primary <%= locals.page_name === 'login-page' ? 'active' : '' %>">Login</a></li>
                    <% } %>
                    
                    <li>
                        <button class="theme-switch" id="theme-toggle" aria-label="Alternar tema">
                            <i class="fas fa-moon icon-moon"></i>
                            <i class="fas fa-sun icon-sun"></i>
                        </button>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Overlay para o menu mobile -->
    <div class="page-overlay" id="page-overlay"></div>


    <!-- ================================================================================================== -->
    <!--      CONTEÚDO DA PÁGINA                                                                            -->
    <!-- ================================================================================================== -->
    <main class="main-content-wrapper">
        <%- body %>
    </main>


    <!-- ================================================================================================== -->
    <!--      FOOTER - HTML INTEGRADO (se existir)                                                          -->
    <!-- ================================================================================================== -->
    <%- include('../partials/footer') %>


    <!-- ================================================================================================== -->
    <!--      JAVASCRIPT EMBUTIDO - LÓGICA FUNCIONAL GARANTIDA                                              -->
    <!-- ================================================================================================== -->
    <script>
        // O script é envolvido em um ouvinte de evento para garantir que o HTML esteja pronto.
        document.addEventListener('DOMContentLoaded', () => {

            // --- LÓGICA DO MENU HAMBÚRGUER (MOBILE) ---
            const hamburgerBtn = document.getElementById('hamburger-menu');
            const mainNav = document.getElementById('main-nav');
            const overlay = document.getElementById('page-overlay');
            const body = document.body;

            // Verifica se os elementos essenciais existem para evitar erros
            if (hamburgerBtn && mainNav && overlay) {
                
                const toggleMenu = () => {
                    const isActive = mainNav.classList.toggle('is-active');
                    body.classList.toggle('nav-open', isActive);
                    
                    hamburgerBtn.setAttribute('aria-expanded', isActive);

                    const icon = hamburgerBtn.querySelector('i');
                    if (icon) {
                        icon.classList.toggle('fa-bars', !isActive);
                        icon.classList.toggle('fa-times', isActive);
                    }
                };

                hamburgerBtn.addEventListener('click', toggleMenu);
                overlay.addEventListener('click', toggleMenu);
            }

            // --- LÓGICA DO TEMA (ESCURO/CLARO) ---
            const themeToggleBtn = document.getElementById('theme-toggle');
            const htmlElement = document.documentElement;

            if (themeToggleBtn && htmlElement) {
                const applySavedTheme = () => {
                    const savedTheme = localStorage.getItem('theme') || 'dark';
                    htmlElement.setAttribute('data-theme', savedTheme);
                };

                const toggleTheme = () => {
                    const currentTheme = htmlElement.getAttribute('data-theme');
                    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                    htmlElement.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                };

                themeToggleBtn.addEventListener('click', toggleTheme);
                applySavedTheme();
            }
        });
    </script>

</body>
</html>